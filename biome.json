{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": [
			"./crates/**/*",
			"./packages/core/lib/openapi.gen.ts",
			"./packages/react-ui/src/components/ui/*",
			"./apps/solid/src/components/ui/*"
		]
	},
	"javascript": {
		"formatter": {
			"indentStyle": "space",
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedImports": "warn"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"options": {
						"functions": ["cva"]
					}
				}
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
